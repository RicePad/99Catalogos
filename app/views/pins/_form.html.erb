<%= form_for(@pin) do |f| %>
	<% @pin.errors.full_messages.each do |error|%>
     <li><%= error %></li>
  <% end %>
<div class="container">
<div class="panel panel-default">
    <%= link_to '', pins_path, class: "fa fa-times fa-3x", style: "color: #bd081c"%>
   <h1 style="text-align: center; color: #bd081c;">Create a Pin</h1>
	<div class="panel-body">
		<div class="form-horizontal">
		  <div class="form-group">
		      <%= f.label :title, class: "col-sm-2 control-label", style: "color: #bd081c;" %>
		   <div class="col-sm-10">
		      <%= f.text_field :title, class: "form-control", rows: "3"%>	
		   </div>
  		 </div>
  		
        <div class="form-group">
        	<%= f.label :description, class: "col-sm-2 control-label", style: "color: #bd081c;" %>
        	<div class="col-sm-10">
        	<%= f.text_area :description, class: "form-control", rows: "5" %>
        	</div>
        </div>
          <div class="form-group file-button">
               <label class="btn btn-danger">
                Upload thumb image <%= f.file_field :thumb_image, style: 'display:none' %>
               </label>
        </div>
        
        <div class="form-group file-button">
               <label class="btn btn-danger">
                Upload main image <%= f.file_field :main_image, style: 'display:none' %>
               </label>
        </div>
 
       

        
        <div class="form-group">
        	<div class="col-sm-offset-2 col-sm-10">
        		<%= f.submit "Submit", class: "btn btn-danger btn-block"%>

        	</div>
        </div>
        
  		 
		</div>
	</div>
</div>
</div>

<% end %>