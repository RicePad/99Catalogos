
<table class='table table-hover table-condensed'>
  <thead>
    <tr>
      <th>Title</th>
      <th nowrap>Year</th>
      <th nowrap>Released</th>
      <th nowrap>Runtime</th>
      <th>Plot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.title %></td>
        <td nowrap><%= pin.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

